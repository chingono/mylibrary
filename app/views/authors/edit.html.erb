<!-- Validation failure messages -->
<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Author #<%= @author.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_author/<%= @author.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for affiliation -->

      <div class="form-group">
        <label for="affiliation" class="control-label">
          Affiliation
        </label>


        <input type="text" id="affiliation" name="affiliation" placeholder="Affiliation" class="form-control" value="<%= @author.affiliation %>">

      </div>



      <!-- Label and input for first_name -->

      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>


        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @author.first_name %>">

      </div>



      <!-- Label and input for last_name -->

      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>


        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @author.last_name %>">

      </div>



      <button class="btn btn-warning">
        Update Author
      </button>
      or

      <a href="/authors/<%= @author.id %>">Cancel</a>


    </form>

  </div>
</div>
