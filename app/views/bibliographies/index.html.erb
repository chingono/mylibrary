<div class="page-header">
  <h1>
    Bibliographies

    <a href="/bibliographies/new" class="btn btn-lg btn-success">New Bibliography</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Article</th>

        <th>Author</th>

        <th>Actions</th>
      </tr>

      <% @bibliographies.each do |bibliography| %>
      <tr>

        <td><%= bibliography.article_id %></td>

        <td><%= bibliography.author_id %></td>

        <td>

          <a href="/bibliographies/<%= bibliography.id %>" class="btn btn-primary">Show</a>
          <a href="/bibliographies/<%= bibliography.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bibliography/<%= bibliography.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
