<!-- Validation failure messages -->
<% if @bibliography.errors.any? %>
  <% @bibliography.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bibliography</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_bibliography" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for article_id -->

      <div class="form-group">
        <label for="article_id" class="control-label">
          Article
        </label>


        <input type="text" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @bibliography.article_id %>">

      </div>



      <!-- Label and input for author_id -->

      <div class="form-group">
        <label for="author_id" class="control-label">
          Author
        </label>


        <input type="text" id="author_id" name="author_id" placeholder="Author" class="form-control" value="<%= @bibliography.author_id %>">

      </div>



      <button class="btn btn-success">
        Create Bibliography
      </button>
      or
      <a href="/bibliographies">Cancel</a>

    </form>

  </div>
</div>
