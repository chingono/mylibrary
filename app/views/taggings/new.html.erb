<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h5>Add a topic to <i>"<%= @article.title %>"</i></h5>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_tagging" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for article_id -->

      <div class="form-group">

      <input type="hidden" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @article.id %>">

        <!-- <%= select_tag(:article_id, options_from_collection_for_select(Article.all, :id, :title, @article.id), :class => "form-control") %> -->

      </div>



      <!-- Label and input for topic_id -->

      <div class="form-group">
        <label for="topic_id" class="control-label">
          Select Topic
        </label>

        <!-- <input type="text" id="topic_id" name="topic_id" placeholder="Topic" class="form-control" value="<%= @tagging.topic_id %>"> -->

        <%= select_tag(:topic_id, options_from_collection_for_select(Topic.all, :id, :name, @tagging.topic_id), :class => "form-control") %>

      </div>

      <button class="btn btn-success">
        Create Article
      </button>
      or
      <a href="/taggings">Cancel</a>

    </form>

  </div>
</div>
