<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tagging #<%= @tagging.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_tagging/<%= @tagging.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for article_id -->

      <div class="form-group">
        <label for="article_id" class="control-label">
          Article
        </label>


        <input type="text" id="article_id" name="article_id" placeholder="Article" class="form-control" value="<%= @tagging.article_id %>">

      </div>



      <!-- Label and input for topic_id -->

      <div class="form-group">
        <label for="topic_id" class="control-label">
          Topic
        </label>


        <input type="text" id="topic_id" name="topic_id" placeholder="Topic" class="form-control" value="<%= @tagging.topic_id %>">

      </div>



      <button class="btn btn-warning">
        Update Tagging
      </button>
      or

      <a href="/taggings/<%= @tagging.id %>">Cancel</a>


    </form>

  </div>
</div>
