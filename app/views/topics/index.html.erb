<div style="margin-top: 20px" class="page-header text-center col-md-6 col-md-offset-3">
  <h3>
    Topics
  </h3>
  </div>

<div style="margin-bottom: 30px" class="col-md-6 col-md-offset-3">
    <a href="/topics/new" class="btn btn-success btn-block">
          <i class="fa fa-plus"></i>
        </a>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>

        <th class="text-right">Contents</th>

      </tr>

      <% @topics.order('name ASC').each do |topic| %>
      <tr>

        <td>
          <a href="/topics/<%= topic.id %>" class="btn btn-info"><%= topic.name %></a>
        </td>

        <td class="text-right"><%= topic.tagged_articles.count %> articles</td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
