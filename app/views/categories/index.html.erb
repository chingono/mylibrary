<div class="page-header">
  <h1>
    Categories

    <a href="/categories/new" class="btn btn-lg btn-success">New Category</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>

        <th>Contents</th>

        <th></th>
      </tr>

      <% @categories.each do |category| %>
      <tr>

        <td><%= category.name %></td>

        <td><%= category.articles.count %> articles</td>

        <td>
          <a href="/categories/<%= category.id %>" class="btn btn-primary"><i class="fa fa-search-plus" ></i></a>

          <a href="/categories/<%= category.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>

          <a href="/delete_category/<%= category.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
